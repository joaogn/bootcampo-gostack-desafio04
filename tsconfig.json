{
  "compilerOptions": {
    "outDir": "public",
    "rootDir": "src",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/custom-types"], 
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true  
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}